{% extends "base.html.twig" %}

{% block title %}Ajouter un employe
{% endblock %}


{% block body %}

{% if employe is not defined %}
	<h1 class="text-center my-4">Ajouter un employé dans l'annonceur</h1>
{% else %}
	<h1 class="text-center my-4">Modifier l'employé {{ employe.prenom }}</h1>      
{% endif %}

	{# form() est la fonction Twig pour afficher le formulaire #}
	{# Il existe plusieurs façons de demander à TWIG d'afficher un formulaire #}
	<div class="row">
		<div class="col-6 mx-auto">
		    {{ form(form_employe)}}
		</div>
	</div>

	{% endblock %}
